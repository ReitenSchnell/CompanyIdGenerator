@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-header"></div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">What would you like to generate?</h3>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-9">
                                <select class="form-control" id="select" ng-model="numberType" ng-click="generate()">
                                    <option>Swedish Company Id</option>
                                    <option>Swedish Tax Number</option>
                                    <option>Finnish Company Id</option>
                                    <option>Finnish Tax Number</option>
                                </select>
                            </div>
                            <div class="col-lg-2">
                                <button class="btn btn-primary" ng-click="generate()">Generate</button>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 15px">
                            <div class="col-lg-11 text-success">
                                {{generatedId}}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

